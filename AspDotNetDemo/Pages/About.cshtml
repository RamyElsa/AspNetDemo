@page
@model AspDotNetDemo.Pages.AboutModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration config
<h1>@config["AboutPageTitle"]</h1>

<h1>@Model.GetTitle()</h1>
<table class="table table-dark table-striped">

    <thead>
        <th>ID</th>
        <th>Title</th>
        <th>Auther</th>
        <th>Price</th>
    </thead>

    <tbody>
    @{
        foreach( var book in Model.GetBooks())
        {
            <tr>
            <td>@book.Id</td>
            <td>@book.Title</td>
            <td>@book.Auther</td>
            <td>@book.Price</td>
            </tr>
            
        }
    }
    </tbody>

</table>



